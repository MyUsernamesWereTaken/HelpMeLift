<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.QuadsWorkouts.HackSquats">

    <TextView
        android:id="@+id/exercises"
        android:layout_width="158dp"
        android:layout_height="19dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="4dp"
        android:text="@string/Hack_Squats"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <VideoView
        android:id="@+id/HackSquatvid"
        android:layout_width="357dp"
        android:layout_height="255dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercises" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="354dp"
        android:layout_height="182dp"
        android:layout_marginTop="12dp"
        android:text="                                              Setup:
        \n- Stand inside the Smith machine with your back against the barbell.
        \n- Position yourself so that your feet are shoulder-width apart and your toes are slightly pointing outwards.
        \n                                      Shoulder Rest:
        \n- Position your shoulders under the barbell, with the barbell resting comfortably across the back of your shoulders.
        \n-  Grasp the barbell with an overhand grip, slightly wider than shoulder-width apart."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HackSquatvid" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="354dp"
        android:layout_height="165dp"
        android:layout_marginTop="8dp"
        android:text="                                              Stance:
        \n- Ensure that your feet are firmly planted on the ground, with your heels flat.
        \n- Your feet can be positioned slightly in front of you, with your toes pointing slightly outward to provide stability.
        \n                                          Squat Down:
        \n- Slowly lower your body by bending at the knees and hips, keeping your back straight and your chest up.
        \n- Lower yourself until your thighs are parallel to the ground, maintaining control throughout the movement."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="354dp"
        android:layout_height="100dp"
        android:layout_marginTop="4dp"
        android:text="                                      Push Back Up
        \n- Keep your back straight and your chest up as you rise.
        \n- Engage your quadriceps, hamstrings, and glutes to push through your heels to return to the start."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>