<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.BicepWorkout.Incline_Bicep_Curl">

    <TextView
        android:id="@+id/exercises"
        android:layout_width="230dp"
        android:layout_height="23dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="4dp"
        android:text="@string/Incline_Bicep_Curl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <VideoView
        android:id="@+id/Incline_Bicep_Curl_Vid"
        android:layout_width="357dp"
        android:layout_height="255dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercises" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="352dp"
        android:layout_height="119dp"
        android:layout_marginTop="12dp"
        android:text="Setup:
        \n- Adjust an incline bench to a comfortable angle, typically between 30 to 45 degrees.
        \n- Sit on the bench with your back against the backrest and your feet flat on the floor.
        \n- Hold a dumbbell in each hand, with your arms fully extended down by your sides and palms facing forward."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Incline_Bicep_Curl_Vid" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="351dp"
        android:layout_height="92dp"
        android:layout_marginTop="4dp"
        android:text="Starting Position:
        \n- Keep your back straight against the bench and your core engaged to maintain stability.
        \n- Let your arms hang naturally, with the dumbbells at arm's length."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="352dp"
        android:layout_height="119dp"
        android:layout_marginTop="4dp"
        android:text="Maintain Proper Form:
        \n- Exhale as you slowly lift both dumbbells simultaneously towards your shoulders, bending your elbows and avoid using momentum.
        \n- Keep your upper arms stationary throughout the movement.
        \n- Aim for a full range of motion."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>