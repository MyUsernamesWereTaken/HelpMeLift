<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CalvesWorkout.Box_Jump">

    <TextView
        android:id="@+id/exercises"
        android:layout_width="230dp"
        android:layout_height="23dp"
        android:layout_marginTop="10dp"
        android:text="@string/Box_Jump"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <VideoView
        android:id="@+id/box_jump_Vid"
        android:layout_width="357dp"
        android:layout_height="255dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercises" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="347dp"
        android:layout_height="136dp"
        android:layout_marginTop="12dp"
        android:text="Setup:
        \n- Place a sturdy box in front of you. The height of the box should be a challenge but not too high, this way overtime you can increase the height as you gain confidence.
        \n- Stand facing the box with your feet shoulder-width apart. Maintain a straight posture, engage your core muscles, and keep your arms relaxed by your sides."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/box_jump_Vid" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="355dp"
        android:layout_height="147dp"
        android:layout_marginTop="4dp"
        android:text="Jump:
        \n- Bend your knees slightly and initiate the movement by performing a quick and explosive downward movement, preparing to jump upward.
        \n- Swing your arms backward to generate momentum and propel yourself upward.
        \n- Explosively extend your hips, knees, and ankles simultaneously to jump off the ground.
        \n- Aim to jump ontop of the box."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="356dp"
        android:layout_height="39dp"
        android:layout_marginTop="4dp"
        android:text="Getting Off:
        \n- Make sure to step off the box instead of jumping off."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>