<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LatsWorkout.PendlayRows">

    <TextView
        android:id="@+id/exercises"
        android:layout_width="122dp"
        android:layout_height="24dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="4dp"
        android:text="@string/Pendlay_Row"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <VideoView
        android:id="@+id/PendlayRowvid"
        android:layout_width="354dp"
        android:layout_height="255dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercises" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="358dp"
        android:layout_height="168dp"
        android:layout_marginTop="12dp"
        android:text="Set Up:
        \n- Stand with your feet shoulder-width apart, holding a barbell with an overhand grip, hands slightly wider than shoulder-width apart.
        \n
        \nPosition:
        \n- Bend your knees slightly and hinge forward at your hips, keeping your back straight and chest up.
        \n- Your torso should be almost making a 90 degree angle with your legs."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PendlayRowvid" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="354dp"
        android:layout_height="174dp"
        android:layout_marginTop="4dp"
        android:text="Pull:
        \n- Pull the barbell up towards your lower chest by retracting your shoulder blades and driving your elbows straight back.
        \n- Keep the bar close to your body throughout the movement.
        \n
        \nPause:
        \n- Once the barbell reaches your lower chest, briefly pause and squeeze your back muscles to engage them."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="354dp"
        android:layout_height="84dp"
        android:layout_marginTop="4dp"
        android:text="Lower:
        \n- Lower the barbell back down to the starting position under control, allowing your arms to fully extend.
        \n- Keep your back straight and avoid rounding your spine."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>