<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CalvesWorkout.Single_Leg_Standing_Calf_Raise">

    <TextView
        android:id="@+id/exercises"
        android:layout_width="230dp"
        android:layout_height="23dp"
        android:layout_marginTop="10dp"
        android:text="@string/SingleStandingCalfRaises"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <VideoView
        android:id="@+id/Single_Standing_Calf_Raises_Vid"
        android:layout_width="357dp"
        android:layout_height="255dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercises" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="351dp"
        android:layout_height="151dp"
        android:layout_marginTop="10dp"
        android:text="Setup:
        \n- Adjust the height of the Smith machine bar to a level that allows you to reach it while standing on one leg.
        \n- Position yourself facing the Smith machine with your back straight and your feet hip-width apart.
        \n- Place one foot flat on an elevated platform several inches off the floor with your heel handing off it, slightly in front of the bar, and lift the opposite foot off the ground."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Single_Standing_Calf_Raises_Vid" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="350dp"
        android:layout_height="86dp"
        android:layout_marginTop="4dp"
        android:text="Lowering Phase:
        \n- Slowly lower your heel towards the ground, allowing your calf muscle to stretch fully.
        \n- Maintain control and stability throughout the lowering phase, avoiding sudden movements or jerking motions."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="354dp"
        android:layout_height="130dp"
        android:layout_marginTop="4dp"
        android:text="Lifting Phase:
        \n- Raise your heel upward, lifting your body as high as possible.
        \n- Focus on squeezing your calf muscle at the top to maximize muscle engagement."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>