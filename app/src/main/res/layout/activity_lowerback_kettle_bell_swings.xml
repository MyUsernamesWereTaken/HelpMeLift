<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LowerBackWorkouts.KettleBellSwings">

    <TextView
        android:id="@+id/exercises"
        android:layout_width="158dp"
        android:layout_height="19dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="4dp"
        android:text="@string/Kettlebell_Swings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <VideoView
        android:id="@+id/KettleBellSwingsvid"
        android:layout_width="357dp"
        android:layout_height="255dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercises" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="354dp"
        android:layout_height="167dp"
        android:layout_marginTop="12dp"
        android:text="Setup:
        \n- Stand with your feet slightly wider than shoulder-width apart, toes pointed slightly outward.
        \n- Place a kettlebell on the floor between your feet.
        \n
        \nGrasp the Kettlebell:
        \n- Bend at your hips and knees, keeping your back straight, to grip the kettlebell handle with both hands.
        \n- Your arms should be fully extended, and your shoulders pulled back."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/KettleBellSwingsvid" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="354dp"
        android:layout_height="202dp"
        android:layout_marginTop="8dp"
        android:text="Hike the Kettlebell:
        \n- Inhale deeply, then swing the kettlebell back between your legs while maintaining a strong grip.
        \n- Your arms should be straight, and your torso should be leaning forward, creating tension in your hamstrings and glutes.
        \nSwing Upward:
        \n- Explosively extend your hips and knees while swinging the kettlebell forward and upward.
        \n- Your arms should remain straight, and the momentum from your hips should propel the kettlebell to chest height."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="354dp"
        android:layout_height="54dp"
        android:layout_marginTop="4dp"
        android:text="Control the Descent:
        \n- As the kettlebell reaches its highest point, allow it to swing back down between your legs."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>