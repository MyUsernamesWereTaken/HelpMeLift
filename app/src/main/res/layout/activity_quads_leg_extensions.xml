<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.QuadsWorkouts.LegExtensions">

    <TextView
        android:id="@+id/exercises"
        android:layout_width="158dp"
        android:layout_height="19dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="4dp"
        android:text="@string/Leg_Extensions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <VideoView
        android:id="@+id/LegExtensionvid"
        android:layout_width="357dp"
        android:layout_height="255dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercises" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="354dp"
        android:layout_height="169dp"
        android:layout_marginTop="12dp"
        android:text="                                    Adjust the Machine:
        \n- Sit on the leg extension machine and adjust the seat so that the back of your knees align with the pivot point of the machine.
        \n- Adjust the leg pad so that it rests comfortably just above your ankles.
        \n                                      Select the Weight:
        \n- Choose an appropriate weight by inserting the weight pin into the weight stack.
        \n- Start with a light weight to ensure proper form and prevent injury."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LegPressvid" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="354dp"
        android:layout_height="152dp"
        android:layout_marginTop="8dp"
        android:text="                                    Position your body:
        \n- Sit up straight with your back against the backrest and grip the handles if available for stability.
        \n- Keep your feet flat on the floor and your thighs snug against the seat.
        \n                                       Extend Your Legs:
        \n-  While exhaling, slowly extend your legs until they are straight in front of you.
        \n- Focus on contracting your quadriceps as you perform this movement."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="354dp"
        android:layout_height="100dp"
        android:layout_marginTop="4dp"
        android:text="                                      Hold and Squeeze:
        \n- At the top of the movement, briefly hold the position for a moment to maximize muscle contraction and squeeze your quadriceps.
        \n- Slowly lower the weight by bending your knees and allowing the leg pad to return to the starting position."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>