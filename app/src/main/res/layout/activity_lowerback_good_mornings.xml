<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LowerBackWorkouts.GoodMornings">

    <TextView
        android:id="@+id/exercises"
        android:layout_width="158dp"
        android:layout_height="19dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="4dp"
        android:text="@string/Good_Mornings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <VideoView
        android:id="@+id/GoodMorningsvid"
        android:layout_width="357dp"
        android:layout_height="255dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercises" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="354dp"
        android:layout_height="118dp"
        android:layout_marginTop="12dp"
        android:text="Starting Position:
        \n- Begin by standing with your feet shoulder-width apart and your hands placed lightly on the back of your head, elbows pointed outward.
        \nEngage Core:
        \n- Tighten your abdominal muscles to stabilize your spine and protect your lower back throughout the exercise."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GoodMorningsvid" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="354dp"
        android:layout_height="213dp"
        android:layout_marginTop="8dp"
        android:text="Lowering Phase:
        \n- Slowly bend forward at your hips while keeping your back straight.
        \n- Focus on pushing your hips back as if you're trying to touch a wall behind you with your buttocks.
        \n- Keep your chest lifted and your head in a neutral position.
        \nForward Bend:
        \n- Continue bending forward until your torso is parallel to the floor or slightly lower, feeling a stretch in your hamstrings.
        \n- Keep your knees slightly bent to avoid locking them out."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="354dp"
        android:layout_height="85dp"
        android:layout_marginTop="4dp"
        android:text="Return to Starting Position:
        \n- Engage your glutes and hamstrings to lift your torso back up to the starting position.
        \n- Keep your back straight and avoid arching it excessively as you return to standing."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>