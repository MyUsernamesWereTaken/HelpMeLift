<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.BicepWorkout.Waiter_Curl">

    <TextView
        android:id="@+id/exercises"
        android:layout_width="230dp"
        android:layout_height="23dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="4dp"
        android:text="@string/Waiter_Curls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <VideoView
        android:id="@+id/Waiter_Curl_Vid"
        android:layout_width="357dp"
        android:layout_height="255dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercises" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="355dp"
        android:layout_height="121dp"
        android:layout_marginTop="12dp"
        android:text="Setup:
        \n- Stand with your feet shoulder-width apart, keeping your spine straight and your core engaged.
        \n- Place the dumbbell on a bench so that the weight number is facing the roof, then pick up the dumbbell
        with both palms carrying the weight of one side of the dumbbell."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Waiter_Curl_Vid" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="351dp"
        android:layout_height="92dp"
        android:layout_marginTop="4dp"
        android:text="Breathing:
        \n- Exhale as you lift the dumbbells (during the concentric phase).
        \n- Inhale as you lower the dumbbells (during the eccentric phase)."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="352dp"
        android:layout_height="119dp"
        android:layout_marginTop="4dp"
        android:text="Maintain Proper Form:
        \n- Exhale as you slowly lift the dumbbell towards your shoulders, bending your elbows and avoid using momentum.
        \n- Keep your upper arms stationary throughout the movement.
        \n- Aim for a full range of motion."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />


</androidx.constraintlayout.widget.ConstraintLayout>