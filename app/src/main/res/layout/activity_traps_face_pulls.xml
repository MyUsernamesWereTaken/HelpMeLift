<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.TrapsWorkouts.FacePulls">

    <TextView
        android:id="@+id/exercises"
        android:layout_width="158dp"
        android:layout_height="19dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="4dp"
        android:text="@string/Face_Pulls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <VideoView
        android:id="@+id/FacePullsvid"
        android:layout_width="357dp"
        android:layout_height="255dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercises" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="354dp"
        android:layout_height="199dp"
        android:layout_marginTop="12dp"
        android:text="                                              Setup:
        \n- Attach a rope handle to a high pulley on a cable machine.
        \n- Adjust the pulley to chest height.
        \n- Stand facing the machine and grab each end of the rope with an overhand grip.
        \n                                            Position:
        \n- Take a step back from the machine and extend your arms fully in front of you.
        \n- Your feet should be shoulder-width apart, and your knees slightly bent.
        \n- Maintain a neutral spine throughout the exercise."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FacePullsvid" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="354dp"
        android:layout_height="167dp"
        android:layout_marginTop="8dp"
        android:text="                                       Pulling Motion:
        \n- Pull the rope towards your face by driving your elbows outward and backward.
        \n- Focus on squeezing your shoulder blades together as you pull.
        \n                                         Retraction:
        \n- As the rope reaches your face, retract your shoulder blades fully.
        \n- Imagine pinching a pencil between your shoulder blades."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="354dp"
        android:layout_height="100dp"
        android:layout_marginTop="4dp"
        android:text="                                       Hold and Squeeze:
        \n- Hold the fully retracted position for a brief moment to maximize muscle engagement.
        \n- Focus on feeling the contraction in your upper back muscles."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>