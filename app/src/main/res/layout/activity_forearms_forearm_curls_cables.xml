<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ForearmsWorkout.ForearmCurls_cables">

    <TextView
        android:id="@+id/exercises"
        android:layout_width="162dp"
        android:layout_height="23dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="4dp"
        android:text="@string/Forearm_Curls_Cable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <VideoView
        android:id="@+id/ForearmsCurlvid"
        android:layout_width="357dp"
        android:layout_height="255dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercises" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="354dp"
        android:layout_height="86dp"
        android:layout_marginTop="12dp"
        android:text="Setup:
        \n- Attach a straight bar or rope handle to a low pulley cable machine.
        \n- Adjust the weight on the cable machine according to your strength level."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ForearmsCurlvid" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="354dp"
        android:layout_height="169dp"
        android:layout_marginTop="4dp"
        android:text="Positioning:
        \n- Stand facing the cable machine with your feet shoulder-width apart.
        \n- Grasp the bar or handle with an overhand grip at shoulder-width or slightly narrower.
        \nStarting Position:
        \n- Hold the bar or handle with your arms fully extended, allowing the weight to rest on the cable machine.
        \n- Keep your elbows close to your sides throughout the exercise."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="354dp"
        android:layout_height="163dp"
        android:layout_marginTop="4dp"
        android:text="Execution:
        \n- Exhale and flex your forearms, curling the bar or handle towards your shoulders in a controlled motion.
        \n- Keep your wrists straight throughout the movement and avoid using momentum to lift the weight.
        \n- Continue curling until your forearms are fully contracted and the bar is near your shoulders.
        \n- Hold the contraction briefly to maximize muscle engagement."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>