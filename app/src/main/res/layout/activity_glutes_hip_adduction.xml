<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.GlutesWorkout.HipAdduction">

    <TextView
        android:id="@+id/exercises"
        android:layout_width="162dp"
        android:layout_height="23dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="4dp"
        android:text="@string/Hip_Adduction_Machine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <VideoView
        android:id="@+id/HipAdductionvid"
        android:layout_width="357dp"
        android:layout_height="255dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercises" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="354dp"
        android:layout_height="119dp"
        android:layout_marginTop="12dp"
        android:text="Set Up:
        \n- Begin by sitting on a sturdy chair or bench with your back straight and your feet flat on the floor.
        \nPositioning:
        \n- Place a resistance band around your thighs, just above your knees, for added resistance if desired.
        \n- Position your legs slightly apart, about hip-width."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HipAdductionvid" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="354dp"
        android:layout_height="150dp"
        android:layout_marginTop="4dp"
        android:text="Initiate Movement:
        \n- Engage your core muscles to stabilize your spine and pelvis.
        \n- Ensure that your upper body remains still throughout the exercise.
        \nAdduct:
        \n- Slowly squeeze your inner thighs together, bringing your knees towards each other.
        \n- Focus on using the muscles on the inner thigh."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="354dp"
        android:layout_height="155dp"
        android:layout_marginTop="4dp"
        android:text="Hold:
        \n- Pause briefly at the end of the movement to fully engage your inner thigh muscles.
        \nRelease:
        \n- Slowly release the tension and return to the starting position with control.
        \n- Keep your back straight and avoid leaning forward or backward during the exercise to prevent strain on your lower back."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>