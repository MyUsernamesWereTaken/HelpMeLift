<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.QuadsWorkouts.BackSquat">

    <TextView
        android:id="@+id/exercises"
        android:layout_width="158dp"
        android:layout_height="19dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="4dp"
        android:text="@string/Back_Squats"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <VideoView
        android:id="@+id/BackSquatvid"
        android:layout_width="357dp"
        android:layout_height="255dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercises" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="354dp"
        android:layout_height="169dp"
        android:layout_marginTop="12dp"
        android:text="Get Ready:
        \n- Stand with your feet a bit wider than your shoulders. Put the barbell on a rack at chest height. Stand under it, and place it on your upper back muscles.
        \n- Hold the bar with your hands a bit wider than your shoulders.
        \n
        \nBrace Your Belly:
        \n- Take a big breath and tighten your belly muscles like you're preparing for a punch."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BackSquatvid" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="354dp"
        android:layout_height="172dp"
        android:layout_marginTop="8dp"
        android:text="Bend Down:
        \n- Start bending your hips and knees together, like you're sitting back on a chair.
        \n- Lower your body down until your thighs are about parallel to the ground. If you can, go a bit lower.
        \n
        \nKeep Straight:
        \n- Make sure your knees stay in line with your toes, and your back stays straight.
        \n- Don't let it round or arch too much."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="354dp"
        android:layout_height="109dp"
        android:layout_marginTop="4dp"
        android:text="Push Up:
        \n- Push through your heels to stand back up.
        \n- Keep your belly tight and your back straight as you rise.
        \n- Stand tall and take a second to prepare for the next rep."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>