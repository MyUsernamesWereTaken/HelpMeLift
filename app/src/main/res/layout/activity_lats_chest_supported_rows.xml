<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LatsWorkout.Chest_Supported_Rows">

    <TextView
        android:id="@+id/exercises"
        android:layout_width="158dp"
        android:layout_height="19dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="4dp"
        android:text="@string/Chest_Supported_Rows"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <VideoView
        android:id="@+id/ChestSupportedRowsvid"
        android:layout_width="357dp"
        android:layout_height="255dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercises" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="354dp"
        android:layout_height="121dp"
        android:layout_marginTop="12dp"
        android:text="Get Ready:
        \n- Lie face down on a bench that's set at a slight incline. Your feet should touch the floor for stability.
        \n
        \nGrab the Handles:
        \n- Reach down and grab the handles hanging below the bench, one in each hand."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ChestSupportedRowsvid" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="353dp"
        android:layout_height="171dp"
        android:layout_marginTop="4dp"
        android:text="Set Your Posture:
        \n- Keep your chest pressed firmly against the bench and your back straight.
        \n- This helps protect your lower back during the exercise.
        \n
        \nPull the Weights:
        \n- Pull the handles or dumbbells up toward your chest by bending your elbows and squeezing your shoulder blades together.
        \n- Imagine pulling your elbows back as far as you can."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="357dp"
        android:layout_height="138dp"
        android:layout_marginTop="4dp"
        android:text="Hold and Squeeze:
        \n- Hold the top position for a moment and really squeeze your back muscles.
        \n- This helps to engage and strengthen those muscles.
        \n
        \nLower the Weights:
        \n- Slowly lower the handles or dumbbells back down until your arms are fully extended."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>