<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DeltWorkout.Bent_Over_Rear_Delt_Flys">

    <TextView
        android:id="@+id/exercises"
        android:layout_width="122dp"
        android:layout_height="24dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="4dp"
        android:text="@string/OverheadPress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <VideoView
        android:id="@+id/BentOverRearDeltFlys"
        android:layout_width="357dp"
        android:layout_height="255dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercises" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="354dp"
        android:layout_height="104dp"
        android:layout_marginTop="12dp"
        android:text="Setup:
        \n- Stand with your feet shoulder-width apart, hold a dumbbell in each hand.
        \n- Bend your knees slightly and hinge forward at your hips to bring your torso close to parallel with the ground.
        \n- Keep your back straight and core engaged throughout the exercise."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BentOverRearDeltFlys" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="354dp"
        android:layout_height="181dp"
        android:layout_marginTop="4dp"
        android:text="Positioning:
        \n- Let your arms hang straight down toward the floor.
        \n- Ensure your elbows have a slight bend to prevent strain on the joints.
        \nLift:
        \n- Exhale and simultaneously lift both dumbbells out to the sides until your arms are parallel to the ground.
        \n- Focus on using the muscles of your rear shoulders to lift the weights.
        \n- Keep your arms extended but with a slight bend in the elbows throughout the movement."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="356dp"
        android:layout_height="127dp"
        android:layout_marginTop="4dp"
        android:text="Safety Tips:
        \n- Use a weight that allows you to maintain proper form throughout the exercise.
        \n- Avoid rounding your back or arching excessively during the movement. Keep your spine neutral.
        \n- Focus on squeezing your shoulder blades together as you lift the dumbbells to engage the rear deltoids fully."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>