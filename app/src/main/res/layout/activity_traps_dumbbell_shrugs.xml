<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.TrapsWorkouts.DumbbellShrugs">

    <TextView
        android:id="@+id/exercises"
        android:layout_width="158dp"
        android:layout_height="19dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="4dp"
        android:text="@string/Dumbbell_Shrugs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <VideoView
        android:id="@+id/DbShrugsvid"
        android:layout_width="357dp"
        android:layout_height="255dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercises" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="353dp"
        android:layout_height="119dp"
        android:layout_marginTop="12dp"
        android:text="                                      Starting Position:
        \n- Stand upright with your feet shoulder-width apart, holding a dumbbell in each hand by your sides.
        \n- Ensure your palms are facing your body.
        \n                                      Engage Core:
        \n- Tighten your core muscles to stabilize your torso and maintain good posture throughout the exercise."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DbShrugsvid" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="354dp"
        android:layout_height="152dp"
        android:layout_marginTop="8dp"
        android:text="                                     Elevate Shoulders:
        \n-  Keeping your arms straight, slowly lift your shoulders straight upward as if you are trying to touch your ears with them.
        \n- This will help stabilize your body during the exercise.
        \n                                       Squeeze at the Top:
        \n- Pause for a moment at the top of the movement when your shoulders are fully elevated.
        \n-  Squeeze your shoulder muscles to maximize contraction."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="354dp"
        android:layout_height="100dp"
        android:layout_marginTop="4dp"
        android:text="                                      Lower Down:
        \n- Slowly lower your shoulders back down to the starting position in a controlled manner.
        \n- Avoid letting the weights drop quickly."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>